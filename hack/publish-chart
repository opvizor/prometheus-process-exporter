#!/usr/bin/env bash

set -e

set -vx
(cd charts/prometheus-process-exporter; helm package .)
chart-releaser upload -o nredko -r prometheus-process-exporter -t $GITHUB_TOKEN -p charts/prometheus-process-exporter
chart-releaser index -o nredko -r prometheus-process-exporter -t $GITHUB_TOKEN -p docs/index.yaml
git add docs/index.yaml
git commit -m 'Update the helm chart repository index'
git push origin master
